sql {
	Expression = ExpressionAtom
	ExpressionAtom =
		ExpressionName
		| number
		| string
	ExpressionName = (identifier ".")? identifier
	identifier = &(letter|"_") (alnum|"_")+
	number = digit+ ("." digit+)?
	string = "\"" char* "\""
	char = ~("\""|"\\") any	-- literal
		| "\\" ("\"" | "\\" | "b" | "f" | "n" | "r" | "t" | "v")	-- escaped
}